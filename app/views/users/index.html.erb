<script>
  $('#admin-nav').find('a').removeClass('active');
  $('#donors-tab').addClass('active');
</script>

<div class="row">
  <div class="col-sm-6 infogram">
    <h3>
      <%= @users.donors.count %>
      <small style="font-weight: lighter;"> donors</small>
    </h3>
    <h3>
      <%= @users.admins.count %>
      <small style="font-weight: lighter;"> admins</small>
    </h3>
  </div>
</div>

<div class="table-responsive">
  <table class='table table-striped table-condensed'>
    <thead>
      <tr>
        <th>User ID</th>
        <th>Donor ID</th>
        <th>Role</th>
        <th>Name</th>
        <th>OBLs</th>
        <th>Created</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.donor_id %></td>
          <td><%= user.role %></td>
          <td><%= user.name %></td>
          <td><%= user.open_biome_logs.count %></td>
          <td><%= user.created_at %></td>
          <td><%= link_to 'Show', user %></td>
          <td><%= link_to 'Edit', edit_user_path(user) %></td>
          <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to 'New User', new_user_registration_path if !user_signed_in? %>
<%= link_to 'Add User', new_user_path if current_user.admin? %>